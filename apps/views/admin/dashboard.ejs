<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang admin</title>

    <!--call head.ejs-->
    <%- include ("layout/head") %>

</head>
<body>
    <div class="container">
        <%- include ("layout/nav") %>

        <div class="row" style="margin-bottom: 10px;">
            <div class="col-md-12">
                <a href="/admin/post/new" class="btn btn-success pull-right"> Thêm bài viết mới </a>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                Bài đăng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tiêu đề</th>
                                <th>Nội dung</th>
                                <th>Tác giả</th>
                                <th>Thời gian viết</th>
                                <th>Thời gian cập nhật</th>
                                <th>Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (data && data.posts){%>
                                <% for(var i = 0; i < data.posts.length; i++){%>
                                <tr>
                                    <td> <%= data.posts[i].id%> </td>
                                    <td> <%= data.posts[i].title%> </td>
                                    <td> <%= data.posts[i].content%> </td>
                                    <td> <%= data.posts[i].author%> </td>
                                    <td> <%= data.posts[i].created_at%> </td>
                                    <td> <%= data.posts[i].updated_at%> </td>
                                    <td>
                                        <a href="/admin/post/edit/<%= data.posts[i].id%>" class="btn btn-primary"> Chỉnh sửa </a>
                                        <button class="btn btn-danger post_delete" post_id="<%= data.posts[i].id%>"> Xoá </button>
                                    </td>
                                </tr>
                                <%}%>
                            <%}%>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
           </div>
            <!-- /.panel-body -->
       </div>
    </div>

    <!--<script type="text/javascript" src="/static/js/post.js"></script>-->
</body>
</html>